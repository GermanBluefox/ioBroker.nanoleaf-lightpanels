            "type": "state",
            "common": {
                "name": "Firmware Version of nanoleaf light panels",
                "type": "string",
                "read": true,
                "write": false,
                "role": "info.version"
            }
        },
        {
            "_id": "LightPanels.info.model",
            "type": "state",
            "common": {
                "name": "Model of nanoleaf light panels",
                "type": "string",
                "read": true,
                "write": false,
                "role": "info.model"
            }
